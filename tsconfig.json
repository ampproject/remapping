{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2015",
    "module":"es2015",
    "lib": ["es2015"],
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src",
    "test"
  ]
}
