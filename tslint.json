{
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [ "dist" ]
  },
  "rules": {
    "no-any": true,
    "ordered-imports": true,
    "object-literal-sort-keys": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration"
    ]
  }
}